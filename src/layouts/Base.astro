---
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark">
    <header>
      <a href="/">🚀 Home</a>
    </header>
    <h1>Astro workshop</h1>
    <slot />
    <footer>🪐</footer>
  </body>
</html>

<style>
  h1 {
    @apply font-bold text-3xl;
    @apply pt-5 pb-5;
    @apply text-center;
  }
</style>

<style is:global>
  body {
    @apply flex;
    @apply flex-col;
    @apply h-screen;
  }

  main {
    @apply flex-1;
  }

  html,
  body {
    font-family: "Roboto", sans-serif;
  }

  header {
    @apply bg-zinc-900;
    @apply text-sky-400;
    @apply p-3;
    @apply font-thin;
  }

  footer {
    @apply bg-zinc-900;
    @apply text-sky-400;
    @apply p-3;
    @apply font-thin;
  }

  h2 {
    @apply text-2xl;
    @apply mb-10;
    @apply font-semibold;
  }

  p {
    @apply mb-4;
  }

  a {
    @apply underline;
    @apply decoration-dotted;
    @apply hover:decoration-solid;
  }

  header {
    @apply flex;
    @apply gap-6;
  }
</style>
