---
const planets = await Astro.glob("../pages/planets/*.md");
---

<nav class="navbar">
  <div class="flex-1">
    <a class="btn btn-ghost text-xl" href="/">Index</a>
  </div>
  <ul class="menu menu-horizontal px-1">
    <li>
      <details>
        <summary>Planets</summary>
        <ul class="p-2">
          {
            planets.map((planet) => (
              <li>
                <a href={planet.url}>{planet.frontmatter.planet}</a>
              </li>
            ))
          }
        </ul>
      </details>
    </li>
  </ul>
</nav>
